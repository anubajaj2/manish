	<Page id="Maker" title="Home Screen" >
		<headerContent>
			<Button icon="sap-icon://customer" tooltip="User" press="onUserPress"></Button>
			<Button icon="sap-icon://log" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</headerContent>
		<content>
			<IconTabHeader mode="Inline" select="onTabSelect1">
					<items>
						<IconTabFilter key="PURCHASESLITE" text="PURCHASES LITE" />
						<IconTabFilter key="PURCHASESDETAILE" text="PURCHASES DETAILE" />
						<IconTabFilter key="PURCHASESLEIGHNTH" text="PURCHASES LEIGHNTH" />
					</items>
				</IconTabHeader>
				<VBox visible = "{= ${local>/sKeyType} === 'PURCHASESLITE' ? true:false }">
				<core:Fragment fragmentName="sap.ui.demo.cart.fragments.PurchaseStyle"  type="XML" ></core:Fragment>
			</VBox>
			<VBox  visible = "{= ${local>/sKeyType} === 'PURCHASESDETAILE' ? true:false }">

				<core:Fragment fragmentName="sap.ui.demo.cart.fragments.PurchaseDetail"></core:Fragment>
				</VBox>
				<VBox visible = "{= ${local>/sKeyType} === 'PURCHASESLEIGHNTH' ? true:false }">
				<core:Fragment fragmentName="sap.ui.demo.cart.fragments.Purchaseleighnth" ></core:Fragment>
				</VBox>


		</content>
		</Page>

</mvc:View>
