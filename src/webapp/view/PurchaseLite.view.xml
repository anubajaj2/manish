            </OverflowToolbar>
          </t:extension>
          <t:columns>

            <t:Column width="20%">
              <Label text="ITEM CODE" />
              <t:template>
                <Text text="{PurchaseLiteModel>ItemCode}" wrapping="true" />
              </t:template>
            </t:Column>
            <t:Column width="20%">
              <Label text="TAG NO" />
              <t:template>
                <Text text="{PurchaseLiteModel>TagNo}" wrapping="true" />
              </t:template>
            </t:Column>

            <t:Column width="20%">
              <Label text="G WT" />
              <t:template>
                <Text text="{PurchaseLiteModel>GWt}" wrapping="true" />
              </t:template>
            </t:Column>

            <t:Column width="20%">
              <Label text="AMOUNT" />
              <t:template>
                <Text text="{PurchaseLiteModel>Amount}" wrapping="true" />
              </t:template>
            </t:Column>

            <t:Column width="20%">
              <Label text="PCS" />
              <t:template>
                <Text text="{PurchaseLiteModel>PCS}" wrapping="true" />
              </t:template>
            </t:Column>

            <t:Column width="20%">
              <Label text="SIZE*" />
              <t:template>
                <Text text="{PurchaseLiteModel>Size}" wrapping="true" />
              </t:template>
            </t:Column>

            <t:Column width="20%">
              <Label text="Photo" />
              <t:template>
                <Button icon="sap-icon://image-viewer" type="{=${PurchaseLiteModel>PhotoCheck}===true?'Accept':'Attention'}"  text="" wrapping="true" press="onPhotoClick" />
              </t:template>
            </t:Column>

            <t:Column width="20%">
              <Label text="Remarks" />
              <t:template>
                <Text text="{PurchaseLiteModel>Remark}" wrapping="true" />
              </t:template>
            </t:Column>
            <t:Column width="20%" visible="{PurchaseLiteModel>/visible}">
              <Label text="Options" />
              <t:template>
                <HBox>
                  <Button icon="sap-icon://edit" press="onEdit" class="sapUiTinyMarginEnd changecolor"></Button>
                  <Button icon="sap-icon://delete" class="sapUiTinyMarginEnd deletecolor" press="onDelete"></Button>
                  <Button icon="sap-icon://copy" press="onCopy" class="copycolor"></Button>
                </HBox>
              </t:template>
            </t:Column>
          </t:columns>
        </t:Table>
        <footer>
