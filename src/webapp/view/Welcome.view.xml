<mvc:View
	controllerName="sap.ui.demo.cart.controller.Welcome"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	xmlns:semantic="sap.m.semantic"
	height="100%">
	<semantic:FullscreenPage>
		<semantic:customHeaderContent>
			<Button id="sideNavigationToggleButton" icon="sap-icon://nav-back" type="Transparent" press="onNavButtonPress">
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<Button text="Men" type="Transparent" width="10%">
				<layoutData>
					<OverflowToolbarLayoutData priority="Low"/>
				</layoutData>
			</Button>
			<Button text="Women" type="Transparent" width="10%">
				<layoutData>
					<OverflowToolbarLayoutData priority="Low"/>
				</layoutData>
			</Button>
			<Button text="Kids" type="Transparent" width="10%">
				<layoutData>
					<OverflowToolbarLayoutData priority="Low"/>
				</layoutData>
			</Button>
			<Button text="Bridal" type="Transparent" width="10%">
				<layoutData>
					<OverflowToolbarLayoutData priority="Low"/>
				</layoutData>
			</Button>
			<Button text="Offer" type="Transparent" width="10%">
				<layoutData>
					<OverflowToolbarLayoutData priority="Low"/>
				</layoutData>
			</Button>
			<ToolbarSpacer>
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
				</layoutData>
			</ToolbarSpacer>
			<Button icon="sap-icon://customer" tooltip="User" press="onUserPress"/>
			<Button icon="sap-icon://log" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</semantic:customHeaderContent>
		<semantic:content>
			<HBox>
				<VBox width="15%">
					<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4">
						<form:content>
							<Label text="STYLE"/>
							<VBox class="sapUiSmallMarginBegin">
								<CheckBox text="DIAMOND"/>
								<CheckBox text="KUNDAN MEENA" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox id="focusMe" text="POLKI">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="ANTIQUE" wrapping="true" width="200px">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="JADAU" wrapping="true" width="200px">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="MACHINE" wrapping="true" width="200px">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="ROSE" wrapping="true" width="200px">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="ITTALIAN" wrapping="true" width="200px">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="MOTI" wrapping="true" width="200px">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
							</VBox>
						</form:content>
					</form:SimpleForm>
				</VBox>
				<VBox width="70%">
					<f:GridList id="gridList" itemPress="onGridItemPress" items="{ path: 'local>/cat/category' }">
						<f:customLayout>
							<grid:GridBoxLayout boxMinWidth="12.5rem"/>
						</f:customLayout>
						<f:GridListItem type="Active" class="sapUiTinyMargin">
							<VBox height="100%">
								<VBox class="sapUiMediumMargin">
									<Title class="gridCenter" text="{local>Category}"/>
								</VBox>
							</VBox>
						</f:GridListItem>
					</f:GridList>
				</VBox>
				<VBox width="15%">
					<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4">
						<form:content>
							<Label text="TYPE"/>
							<VBox class="sapUiSmallMarginBegin">
								<CheckBox text="STUDDED">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="PALIN" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
							</VBox>
							<Label text="CARAT"/>
							<VBox class="sapUiSmallMarginBegin">
								<CheckBox text="18KT">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="22KT" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
							</VBox>
							<Label text="RATE"/>
							<VBox class="sapUiSmallMarginBegin">
								<CheckBox text="1% TO 2%">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="2% TO 4%" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="4% TO 6%" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="6% TO 8%" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="8% TO 10%" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
								<CheckBox text="10% AND ABOVE" selected="true">
									<layoutData>
										<l:GridData linebreak="true" indentL="4" indentM="4"/>
									</layoutData>
								</CheckBox>
							</VBox>
						</form:content>
					</form:SimpleForm>
				</VBox>
			</HBox>
		</semantic:content>
		<semantic:customFooterContent>
			<Button text="Search" press="onSearch"/>
			<Button text="Clear All" press="onClear"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>
</mvc:View>
