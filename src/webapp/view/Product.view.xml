<mvc:View controllerName="sap.ui.demo.cart.controller.Product" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<Page id="page" backgroundDesign="Solid" showNavButton="true" navButtonPress="onBack">
		<headerContent>
			<Button icon="sap-icon://customer" tooltip="User" press="onUserPress" type="Transparent"></Button>
			<Button icon="sap-icon://favorite" tooltip="Favorite" type="Transparent"/>
			<Button icon="sap-icon://cart" tooltip="Cart" type="Transparent" press="onCartClick"/>
			<Button icon="sap-icon://log" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</headerContent>
		<content>
			<HBox height="90%">
				<VBox width="50%">
					<Image id="caroImg1" src="https://wallpaperaccess.com/full/2463246.jpg" width="100%"/>
					<Label/>
					<Carousel loop="true" height="100px" id="productImages" showPageIndicator="false">
						<pages>
							<Image id="prodImg1" src="https://www.khazanajewellery.com//wp-content/uploads/2016/06/bridal-collections-banner.png" width="100%"/>
							<Image id="prodImg2" src="https://www.ibblondon.com/images/Mens_Banner_Final.jpg" width="100%"/>
							<Image id="prodImg3" src="https://www.annaijewellers.com/wp-content/uploads/2019/04/Bangle-Banner.jpg" width="100%"/>
							<Image id="prodImg4" src="https://www.kalyanjewellers.net/categories/For-Kids/images/forkids_banner.jpg" width="100%"/>
						</pages>
					</Carousel>
				</VBox>
				<VBox class="sapUiMediumMargin">
					<f:SimpleForm
						id="SimpleFormDisplay480_12120Dual"
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanXL="4"
						labelSpanL="4"
						labelSpanM="12"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false">
						<f:content>
							<core:Title text="Specifications"/>
							<Label text="Code"/>
							<Text text="{ProductId}"/>
							<Label text="Description"/>
							<Text text="{ShortDescription}"/>
							<Label text="G WT"/>
							<Text text="{GrossWeight}"/>
							<Label text="Pair Type"/>
							<Text text="{PairType}"/>
							<Label text="Category"/>
							<Text text="{Category}"/>
							<Label text="Sub Category"/>
							<Text text="{SubCategory}"/>
							<core:Title text=""/>
							<Label text="Type"/>
							<Text text="{Type}"/>
							<Label text="Karat"/>
							<Text text="{Karat}"/>
							<Label text="Gender"/>
							<Text text="{Gender}"/>
							<Label text="Tunch"/>
							<Text text="{Tunch}"/>
							<Label text="Wastage"/>
							<Text text="{Wastage}"/>
							<Label text="Making"/>
							<Text text="{Making}"/>
						</f:content>
					</f:SimpleForm>
				</VBox>
			</HBox>
			<HBox height="50%">
				<Image id="caroImg4" src="https://www.kalyanjewellers.net/categories/For-Kids/images/forkids_banner.jpg" width="100%"/>
			</HBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>addToCartShort}" type="Emphasized" press="onAddToCart"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
