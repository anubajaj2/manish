							</l:BlockLayoutCell>
							<l:BlockLayoutCell width="2" class="frontPageCustomRow">
								<Title text="Details"/>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<Title text="Add To Cart"/>
						</l:BlockLayoutRow>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell >
						<form:SimpleForm >
							<form:title>
								<core:Title text="Bhav"/>
							</form:title>
							<form:content>
								<Label text="Gold Bhav 22/22"/>
								<Text text="54000"/>
								<Label text="Gold Bhav 20/22"/>
								<Text text="50000"/>
								<Label text="Silver Bhav 20/22"/>
								<Text text="65000"/>
							</form:content>
						</form:SimpleForm>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<form:SimpleForm >
							<form:title>
								<core:Title text="Cheque Prize"/>
							</form:title>
						</form:SimpleForm>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
