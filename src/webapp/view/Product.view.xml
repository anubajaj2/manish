		</headerContent>
		<content>
			<l:BlockLayout >
				<l:BlockLayoutRow rowColorSet="ColorSet1">

					<l:BlockLayoutCell width="2" class="frontPageCustomRow">
						<VBox>
							<Image id="prodImg1" width="100%"/>
							<Label/>
							<Carousel height="200px" loop="true" showPageIndicator="false" pages="{path: 'local>/ItemPics'}">
								<customLayout>
									<CarouselLayout visiblePagesCount="{local>/ItemPicsCount}"/>
								</customLayout>
								<pages>
									<f:GridList width="100%">
										<f:items>
											<f:GridListItem alignItems="Center">
												<VBox>
													<Image width="100%" height="150px" src="{local>ImageUrl}"/>
												</VBox>
											</f:GridListItem>
										</f:items>
									</f:GridList>
								</pages>
							</Carousel>
						</VBox>
					</l:BlockLayoutCell>

					<l:BlockLayoutCell width="2" class="frontPageCustomRow">
						<l:BlockLayoutRow>
							<l:BlockLayoutCell width="2" class="frontPageCustomRow">
								<Text text="Product Name"/>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell width="2" class="frontPageCustomRow">
