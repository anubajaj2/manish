<mvc:View controllerName="sap.ui.demo.cart.controller.OrderStatus" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<Page id="page" title="Manage Order Status" backgroundDesign="Solid" showNavButton="true" navButtonPress="onBack">
		<headerContent>
			<Button text="Refresh" icon="sap-icon://refresh" press="onRefresh"/>
			<Button icon="sap-icon://filter" press="onFilterOrderStatus"></Button>
			<Button icon="sap-icon://customer" tooltip="User" press="onUserPress"/>
			<Button icon="sap-icon://log" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</headerContent>
		<IconTabBar id="idIconTabBar" select="onFilterSelect" class="sapUiResponsiveContentPadding">
			<items>
				<!-- <IconTabFilter showAll="true" count="{/ProductCollectionStats/Counts/Total}" text="Products" key="All"/> -->
				<IconTabSeparator/>
				<IconTabFilter icon="sap-icon://begin" iconColor="Positive" count="" text="All Orders" key="allOrder"/>
				<IconTabFilter icon="sap-icon://add-document" iconColor="Critical" count="" text="New Orders" key="NewOrders"/>
				<IconTabFilter icon="sap-icon://shipping-status" iconColor="Marker" count="" text="Delivered Orders" key="DeliveredOrders"/>
				<IconTabFilter icon="sap-icon://approvals" iconColor="Positive" count="" text="Approval Orders" key="ApprovalOrders"/>
				<IconTabFilter icon="sap-icon://decline" iconColor="Negative" count="" text="Rejected Orders"
					key="RejectedOrders"/>
			</items>
			<content>
				<List id="idListOS" items="{local>/list/OrderHeader}" mode="MultiSelect" includeItemInSelection="true" itemPress="onItemPress">
					<ObjectListItem title="{local>CustomerCode} - {local>CustomerName}"
						number="{ path: 'local>TotalAmount', formatter: '.formatter.getIndianCurr' }" numberUnit="INR">
						<attributes>
							<ObjectAttribute text="Order No. : {local>OrderNo}" visible="true"/>
							<ObjectAttribute id="idOADate" text="{ path: 'local>OrderDate', formatter: '.formatter.dateAndTime' }"/>
						</attributes>
						<firstStatus>
							<ObjectStatus text="Total Weight : {local>TotalWeight}"/>
						</firstStatus>
						<secondStatus>
							<ObjectStatus text="{ path: 'local>OrderStatus', formatter: '.formatter.prodText' }"
								state="{ path: 'local>OrderStatus', formatter: '.formatter.prodState' }"/>
						</secondStatus>
					</ObjectListItem>
				</List>
			</content>
			</IconTabBar>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<!-- <Button text="Approve" type="" press="onApprove" id="idApprove"></Button> -->
					<Button text="Deliver" type="" press="onDelivered" id="idDel"></Button>
					<!-- <Button text="Reject" type="" press="onReject" id="idCancel"></Button> -->
					<Button text="Print" type="" press="onPrint" id="idPrint"></Button>
					<Button text="Download Invoice" type="" press="onInvoiceDownload" id="idPdf"></Button>
				</Toolbar>
			</footer>
		</Page>
	</mvc:View>
