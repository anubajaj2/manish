<mvc:View controllerName="sap.ui.demo.cart.controller.Preferences" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Page id="page" title="Preferences" backgroundDesign="Solid" showNavButton="true" navButtonPress="onBack">
		<headerContent>
			<Button icon="sap-icon://customer" tooltip="User" press="onUserPress"/>
			<Button icon="sap-icon://log" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</headerContent>
		<content>
			<Panel expandable="true" headerText="Highlights" width="auto" class="sapUiResponsiveMargin">
				<content>
					<f:SimpleForm id="idSF1" editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" columnsXL="0" columnsL="0" columnsM="0" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0">
						<f:toolbar>
							<Toolbar id="TB1">
								<ToolbarSpacer/>
								<Button id="idAdd" tooltip="Add New" icon="sap-icon://add"/>
							</Toolbar>
						</f:toolbar>
						<f:content>
							<Carousel id="car" height="20%" width="100%">
								<customLayout>
									<CarouselLayout visiblePagesCount="4"/>
								</customLayout>
								<Image src="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg" width="50px" height="50px"/>
								<Image src="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg" width="50px" height="50px"/>
								<Image src="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg" width="50px" height="50px"/>
								<Image src="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg" width="50px" height="50px"/>
								<Image src="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg" width="50px" height="50px"/>
								<layoutData>
									<l:GridData span="L12 M12 S12"></l:GridData>
								</layoutData>
							</Carousel>

							<TextArea id="disptext" placeholder="text to display" value="{}" width="100%"></TextArea>

							<Button icon="sap-icon://delete" press="onDelete">
								<layoutData>
									<l:GridData span="L1 M1 S1"></l:GridData>
								</layoutData>
							</Button>
						</f:content>

					</f:SimpleForm>
				</content>
			</Panel>
			<Panel expandable="true" headerText="Bhav" width="auto" class="sapUiResponsiveMargin">
				<content>
					<f:SimpleForm id="idSF" editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" columnsXL="0" columnsL="0" columnsM="0" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0">
						<f:content>
							<Label text="22/22">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<Input id="id22" value="">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Input>

							<Label text="22/20">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<Input id="id20" value="">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Input>

							<Label text="Gold">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<Input id="idGold" value="">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Input>

							<Label text="Silver">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<Input id="idSilver" value="">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Input>

						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
			<Panel expandable="true" headerText="Invoice Settings" width="auto" class="sapUiResponsiveMargin">
				<content>
					<f:SimpleForm id="idIS" editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" columnsXL="0" columnsL="0" columnsM="0" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0">
						<f:content>
							<Label text="GST">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<Input id="idGST" value="{local>/invoice/gst}" description="%" type="Number" enabled="{viewModel>/editEnabled}">
								<layoutData>
									<l:GridData span="L1 M1 S1"></l:GridData>
								</layoutData>
							</Input>
							<Label text="Include GST">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<CheckBox text="" selected="{local>/invoice/includeGST}" enabled="{viewModel>/editEnabled}">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</CheckBox>
							<Label text="Footer Text">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<TextArea id="invoiceText" placeholder="Invoice footer text" value="{local>/invoice/footerText}" width="100%" enabled="{viewModel>/editEnabled}">
								<layoutData>
									<l:GridData span="L9 M9 S9"></l:GridData>
								</layoutData>
							</TextArea>
							<Label text="">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Label>
							<Button text="Edit" press= "onEditInvoiceSettings" type="Ghost">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Button>
							<Button text="Save" press= "onSaveInvoiceSettings" type="Accept">
								<layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</layoutData>
							</Button>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
			</content>
			<!-- <footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button text="Save" type="Accept" press="onSave" id="idSave"></Button>
					<Button text="Clear" type="Ghost" press="onClear" id="idClear"></Button>
					<Button text="Cancel" type="Reject" press="onCacel" id="idCancel"></Button>
				</Toolbar>
			</footer> -->
		</Page>
	</mvc:View>
