<mvc:View controllerName="sap.ui.demo.cart.controller.Customers" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:t="sap.ui.table">
	<!-- <Page id="page" title="Manage Manufacturer" backgroundDesign="Solid"> <content> -->
	<semantic:FullscreenPage id="Customer" navButtonPress="onNavBack" showNavButton="true" title="Manage Customer">
		<semantic:customHeaderContent>
			<Button icon="sap-icon://full-screen" id="idFullScreenBtn" tooltip="fullscreen" iconFirst="true" press="toggleFullScreen"/>
			<Button icon="sap-icon://customer" tooltip="User" press="onUserPress"/>
			<Button icon="sap-icon://log" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</semantic:customHeaderContent>
		<semantic:content id="Customer_screen1">
			<core:Fragment id="Customer" fragmentName="sap.ui.demo.cart.fragments.Customer" type="XML"/>
			<VBox>
				<t:Table rows="{customerModelInfo>/results}" id ="customerTable" selectionMode="Single" rowSelectionChange="onCustomerSelect" ariaLabelledBy="title" alternateRowColors="true" minAutoRowCount="8" visibleRowCountMode="Auto">
					<t:extension>
						<OverflowToolbar>
							<Title id="title" text="Retailers"/>
							<Button icon="sap-icon://download" tooltip="Download" press="onDownloadRetailersData"/>
							<Link id = "downloadLink"/>
							<ToolbarSpacer/>
							<SearchField width="71%" class="sapUiSmallMargin"/>
							<Button icon = "sap-icon://add-filter" class="sapUiSmallMargin" />
						</OverflowToolbar>
					</t:extension>
					<t:columns>
						<t:Column >
							<Label text="Customer Code"/>
							<t:template>
								<Text text="{customerModelInfo>CustomerCode}" wrapping="false"/>
							</t:template>
						</t:Column>
						<t:Column >
							<Label text="Name"/>
							<t:template>
								<Text text="{customerModelInfo>Name}" wrapping="false"/>
							</t:template>
						</t:Column>
						<!-- <t:Column > <Label text="Group"/> <t:template> <Text text="{customerModelInfo>Group}" wrapping="false"/> </t:template> </t:Column> -->
						<t:Column >
							<Label text="City"/>
							<t:template>
								<Text text="{customerModelInfo>City}" wrapping="false"/>
							</t:template>
						</t:Column>
						<t:Column >
							<Label text="Contact No."/>
							<t:template>
								<Text text="{customerModelInfo>MobilePhone}" wrapping="false"/>
							</t:template>
						</t:Column>
						<t:Column >
							<Label text="E-mail"/>
							<t:template>
								<Text text="{customerModelInfo>EmailId}" wrapping="false"/>
							</t:template>
						</t:Column>
						<t:Column >
							<Label text="Status"/>
							<t:template>
								<Text text="{=${customerModelInfo>Status}==='U'?'Unblocked':'Blocked'}" wrapping="false"/>
							</t:template>
						</t:Column>
					</t:columns>
				</t:Table>
			</VBox>
		</semantic:content>
		<semantic:customFooterContent>
			<Button text="{viewModel>/buttonText}" type="Accept" press="saveData"/>
			<Button text="Delete" type="Reject" press="deleteCustomer" enabled="{viewModel>/deleteEnabled}"/>
			<Button text="Clear" type="Ghost" press="clearScreen"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>
	<!-- </content> </Page> -->
</mvc:View>
