<mvc:View
	controllerName="sap.ui.demo.cart.controller.productSearch"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:anubhav="sap.ui.demo.cart.controls"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{CategoryName}"
		backgroundDesign="Solid"
		showNavButton="true"
		navButtonPress="onBack">
		<content>
			<f:GridList
					id="gridList"
					items="{
						path: '/Products'
					}"
					growing="true"
					growingThreshold="9"
					itemPress="onImageOpen">

				<f:headerToolbar>
					<Toolbar>
						<content>
							<!-- <Title text="GridList, using custom header with SearchField" /> -->
							<ToolbarSpacer/>
							<Button text="Refresh" icon="sap-icon://refresh" press="onRefresh" />
						</content>
					</Toolbar>
				</f:headerToolbar>

				<f:customLayout>
					<grid:GridBoxLayout/>
				</f:customLayout>

				<f:GridListItem defaultSpan="XL12 L12 M12 S12"
				vSpacing="0"
				hSpacing="0" mode="Active">
					<FlexBox
						height="1.5rem" class="sapUiSmallMargin"
						renderType="Bare" justifyContent="Center">
						<l:VerticalLayout>
							<ObjectIdentifier
								title="{Name}"
								tooltip="{Name}"
								titleActive="true"
								titlePress="onSelectProduct"
								class="sapUiTinyMarginBottom"/>
						</l:VerticalLayout>
					</FlexBox>
					<FlexBox
						renderType="Bare" height="15rem" width="100%"
						justifyContent="Center">
						<anubhav:ImageHover
							src="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg"
							width="100%"
							height="100%"
							press="onImageOpen"
							tooltip=""
							mIn="onImageIn"
							mOut="onImageOut"
							alt="">
							<!-- <anubhav:detailBox>
								<LightBox>
									<LightBoxItem
											imageSrc="https://5.imimg.com/data5/RU/WR/MY-8087605/kundan-meena-set-500x500.jpg"
											/>
									<LightBoxItem
											imageSrc="https://img5.cfcdn.club/5e/cb/5ef37886b3ad099ddb939520191ec4cb_350x350.jpg"
											/>
								</LightBox>
							</anubhav:detailBox> -->
						</anubhav:ImageHover>
					</FlexBox>
					<FlexBox renderType="Bare" width="100%"
						justifyContent="Begin">
						<ToggleButton
							tooltip="{i18n>addToCart}"
							press="onAddToCart" class="sapUiTinyMargin"
							icon="sap-icon://cart-3"
							>
							<layoutData>
								<l:GridData span="XL4 L4 M4 S4"/>
							</layoutData>
						</ToggleButton>
						<HBox class="sapUiTinyMargin" direction="RowReverse"
							justifyContent="End" alignItems="End">
							<VBox>
								<HBox>
									<Text class=""
										title="Gross Wt."
										text="{GrossWeight} gm">
										<layoutData>
											<l:GridData span="XL4 L4 M4 S4"/>
										</layoutData>
									</Text>
									<Text class="sapUiTinyMarginBegin"
										title="Tunch"
										text="{Tunch} T">
										<layoutData>
											<l:GridData span="XL4 L4 M4 S4"/>
										</layoutData>
									</Text>
								</HBox>
								<Text
									state="
									{ path: 'Status',
									formatter: '.formatter.statusState' }"
									text="
									{ path: 'Status',
									formatter: '.formatter.statusText' }">
								</Text>
							</VBox>
						</HBox>


					</FlexBox>
					<!-- <VBox >
						<VBox class="sapUiSmallMargin">
							<layoutData>
								<FlexItemData growFactor="1" shrinkFactor="0" />
							</layoutData>
							<Title text="{Name}" wrapping="true" />
							<Label text="{Category}" wrapping="true" />
						</VBox>
					</VBox> -->
				</f:GridListItem>
			</f:GridList>
		</content>
	</Page>
</mvc:View>
