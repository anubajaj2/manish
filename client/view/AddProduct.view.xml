<mvc:View controllerName="sap.ui.demo.cart.controller.AddProduct" xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<Page id="page" title="Add New Product">
		<headerContent>
			<Button icon="sap-icon://copy" tooltip="Copy form existing" press="onPress"></Button>
		</headerContent>
		<content>
			<f:SimpleForm id="idSF" editable="true" layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="3"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="4"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="2"
				columnsL="1"
				columnsM="1">
				<f:content>
					<Label text="Product Code"/>
					<Input id="idName" value="{local>/Product/ProductId}" submit="onEnter" liveChange="onLiveChange"
									showValueHelp="true" valueHelpRequest="onProductValueHelp"/>
				  <Label text="Name"/>
					<Input id="idPName" value="{local>/Product/Name}"/>
					<Label text="Category"/>
					<Select id="idCat" items="{local>/cat/category}" selectedKey="{local>/Product/Category}">
						<items>
							<core:Item text="{local>Category}" key="{local>Category}"/>
						</items>
					</Select>
					<Label text="SubCategory"/>
					<Select id="idSubCat" items="{local>/cat/subCatergory}" selectedKey="{local>/Product/SubCategory}">
						<items>
							<core:Item text="{local>SubCategory}" key="{local>SubCategory}"/>
						</items>
					</Select>
					<Label text="Type"/>
					<Select id="idType" items="{local>/cat/type}" selectedKey="{local>/Product/Type}">
						<items>
							<core:Item text="{local>Type}" key="{local>Key}"/>
						</items>
					</Select>

					<Label text="Pair Type"/>
					<Select id="idPairType" selectedKey="{local>/Product/PairType}">
						<items>
							<core:Item text="0" key="0"/>
							<core:Item text="1" key="1"/>
							<core:Item text="2" key="2"/>
							<core:Item text="3" key="3"/>
							<core:Item text="4" key="4"/>
							<core:Item text="5" key="5"/>
							<core:Item text="6" key="6"/>
							<core:Item text="7" key="7"/>
							<core:Item text="8" key="8"/>
							<core:Item text="9" key="9"/>
							<core:Item text="10" key="10"/>
						</items>
					</Select>

					<Label text="Short Description"/>
					<Input id="idSD" value="{local>/Product/ShortDescription}" maxLength="60"/>

					<Label text="Karat"/>
					<Select id="idKarat" selectedKey="{local>/Product/Karat}">
						<items>
							<core:Item text="22/22" key="22/22"/>
							<core:Item text="22/20" key="22/20"/>
						</items>
					</Select>

					<Label text="Gender"/>
					<Select id="idGender" selectedKey="{local>/Product/Gender}">
						<items>
							<core:Item text="Female" key="F"/>
							<core:Item text="Male" key="M"/>
						</items>
					</Select>

					<Label text="Tunch"/>
					<Input id="idTunch" value="{local>/Product/Tunch}"/>

					<Label text="Wastage"/>
					<Input id="idWastage" value="{local>/Product/Wastage}"/>

					<Label text="Making"/>
					<Input id="idMkg" value="{local>/Product/Making}"/>

				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Save" type="Accept" press="onSave" id="idSave"></Button>
				<Button text="Clear" type="Ghost" press="onClear" id="idClear"></Button>
				<Button text="Cancel" type="Reject" press="onCacel" id="idCancel"></Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
