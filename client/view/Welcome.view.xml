<mvc:View
	controllerName="sap.ui.demo.cart.controller.Welcome"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:f="sap.f">
	<Panel id="panelForGridList">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="Select Category and Type"/>
				</Toolbar>
			</headerToolbar>
			<content>
				<f:GridList
					id="gridList"
					headerText="Categories"
					items="{ path: 'local>/cat/category' }">

				<f:customLayout>
					<grid:GridBoxLayout boxMinWidth="10rem"/>
				</f:customLayout>

				<f:GridListItem detailPress="onGridItemPress">
					<VBox height="100%">
						<VBox class="sapUiSmallMargin">
							<layoutData>
								<FlexItemData growFactor="1" shrinkFactor="0" />
							</layoutData>
							<Title text="{local>Category}" wrapping="true" />
						</VBox>
					</VBox>
				</f:GridListItem>
			</f:GridList>

			</content>
		</Panel>
</mvc:View>
