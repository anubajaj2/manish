<mvc:View
	controllerName="sap.ui.demo.cart.controller.Welcome"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:f="sap.f">
	<Panel id="panelForGridList">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="Select Category and Type"/>
				</Toolbar>
			</headerToolbar>
			<content>
				<f:GridList
						id="gridList"
						headerText="Select Category"
						items="{ path: '/ProductCategories' }"
						growing="true"
					  growingThreshold="9">

					<f:customLayout>
						<grid:GridResponsiveLayout layoutChange="onLayoutChange">
						<grid:layoutS>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 8rem)"
									gridGap="0.25rem 0.25rem">
							</grid:GridSettings>
						</grid:layoutS>
						<grid:layoutM>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 12rem)"
									gridGap="0.5rem 0.5rem">
							</grid:GridSettings>
						</grid:layoutM>
						<grid:layoutL>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 16rem)"
									gridGap="0.75rem 0.75rem">
							</grid:GridSettings>
						</grid:layoutL>
						<grid:layoutXL>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 20rem)"
									gridGap="1rem 1rem">
							</grid:GridSettings>
						</grid:layoutXL>
					</grid:GridResponsiveLayout>
					</f:customLayout>

					<f:GridListItem>
						<VBox width="10%">
							<VBox class="sapUiSmallMargin">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0" />
								</layoutData>
								<ToggleButton text="{Category}" enabled="true" pressed="false" press="onPress" />
							</VBox>
						</VBox>
					</f:GridListItem>
				</f:GridList>
				<f:GridList id="gridList1"
				headerText="Select Type"
				items="{ path: '/ProductCategories' }"
				growing="true"
				growingThreshold="9">
					<f:GridListItem>
						<VBox>
							<VBox class="sapUiSmallMargin">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0" />
								</layoutData>
								<ToggleButton text="{Type}" enabled="true" pressed="false" press="onPress" />
							</VBox>
						</VBox>
					</f:GridListItem>
				</f:GridList>
			</content>
		</Panel>
</mvc:View>
