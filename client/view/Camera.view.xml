<mvc:View height="100%" controllerName="sap.ui.demo.cart.controller.Camera" xmlns:mvc="sap.ui.core.mvc"
	 xmlns="sap.m" xmlns:f="sap.f" xmlns:cards="sap.f.cards" xmlns:l="sap.ui.layout"
	  xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:grid="sap.ui.layout.cssgrid"
		xmlns:html="http://www.w3.org/1999/xhtml">
	<Panel>
		<unified:FileUploader
			id="fileUploader"
			name="myFileUpload"
			uploadUrl="/Photos"
			fileType='{fileTypes>/items}'
			multiple="true"
			change="onUploadChange"
			uploadStart="beforeUploadStarts"
			tooltip="Upload your file to the local system"
			uploadComplete="handleUploadComplete"/>
		<html:div id="result" />
		<Button
			text="Upload File"
			press="handleUploadPress"/>
	</Panel>
	<f:GridList
			id="gridList"
			items="{
				path: 'images>/allImages'
			}"
			growing="true"
			growingThreshold="9"
			mode="MultiSelect"
			itemPress="onImageOpen">

		<f:headerToolbar>
			<Toolbar>
				<content>
					<!-- <Title text="GridList, using custom header with SearchField" /> -->
					<ToolbarSpacer/>
					<Button text="Refresh" icon="sap-icon://refresh"
						press="onRefresh" />
				</content>
			</Toolbar>
		</f:headerToolbar>

		<f:customLayout>
			<grid:GridBoxLayout/>
		</f:customLayout>

		<f:GridListItem
		 mode="Active">
			<FlexBox
				renderType="Div" height="10rem" width="100%"
				justifyContent="Center">
				<Image
					src="{images>src}"
					width="100%"
					height="100%"
					press="onImageOpen"
					tooltip=""
					mIn="onImageIn"
					mOut="onImageOut"
					alt="">
				</Image>
			</FlexBox>
		</f:GridListItem>
	</f:GridList>
</mvc:View>
