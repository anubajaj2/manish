<mvc:View height="100%" controllerName="sap.ui.demo.cart.controller.Camera" xmlns:mvc="sap.ui.core.mvc"
	 xmlns="sap.m" xmlns:f="sap.f" xmlns:cards="sap.f.cards" xmlns:l="sap.ui.layout"
	  xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:grid="sap.ui.layout.cssgrid"
		xmlns:html="http://www.w3.org/1999/xhtml">
		<Page>
			<content>
				<Panel>
					<unified:FileUploader
						id="fileUploader"
						name="myFileUpload"
						fileType='{fileTypes>/items}'
						multiple="true"
						change="onUploadChange"
						tooltip="Upload your file to the local system"
						/>
					<html:div id="result" />
					<Button
						text="Upload File"
						press="handleUploadPress"/>
				</Panel>
				<f:GridList
						id="gridList"
						items="{
							path: 'local>/allImages'
						}"
						growing="true"
						growingThreshold="20"
						mode="MultiSelect"
						itemPress="onImageOpen">

					<f:headerToolbar>
						<Toolbar>
							<content>
								<!-- <Title text="GridList, using custom header with SearchField" /> -->
								<ToolbarSpacer/>
								<Button text="" icon="sap-icon://delete"
									press="onDelete" />
							</content>
						</Toolbar>
					</f:headerToolbar>

					<f:customLayout>
						<grid:GridBoxLayout/>
					</f:customLayout>

					<f:GridListItem
					 mode="Active">
						<FlexBox
							renderType="Div" height="10rem" width="100%"
							justifyContent="Center">
							<Image
								src="{local>Stream}"
								width="100%"
								height="100%"
								press="onImageOpen"
								tooltip=""
								mIn="onImageIn"
								mOut="onImageOut"
								alt="">
							</Image>
						</FlexBox>
					</f:GridListItem>
				</f:GridList>

			</content>
		</Page>
</mvc:View>
