<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{Name}" contentWidth="80%"
		class="sapUiPopupWithPadding"
		placement="Bottom" >
		<beginButton>
			<Button text="Close" press="handleCloseButton" />
		</beginButton>
		<content>
      <VBox class="sapUiSmallMargin">
    		<f:SimpleForm id="SimpleFormDisplay480_12120Dual"
    			editable="false"
    			layout="ResponsiveGridLayout"
    			labelSpanXL="4"
    			labelSpanL="4"
    			labelSpanM="12"
    			labelSpanS="12"
    			adjustLabelSpan="false"
    			emptySpanXL="0"
    			emptySpanL="0"
    			emptySpanM="0"
    			emptySpanS="0"
    			columnsXL="2"
    			columnsL="2"
    			columnsM="2"
    			singleContainerFullSize="false" >
    			<f:content>
    				<core:Title text="Specifications" />
    				<Label text="Code" />
    				<Text text="{ProductId}" />
    				<Label text="Description" />
    				<Text text="{ShortDescription}" />
    				<Label text="G WT" />
    				<Text text="{GrossWeight}" />
    				<Label text="Pair Type" />
    				<Text text="{PairType}" />
            <Label text="Category" />
    				<Text text="{Category}" />
            <Label text="Sub Category" />
    				<Text text="{SubCategory}" />
    				<core:Title text="" />
    				<Label text="Type" />
    				<Text text="{Type}" />
    				<Label text="Karat" />
    				<Text text="{Karat}" />
            <Label text="Gender" />
    				<Text text="{Gender}" />
    				<Label text="Tunch" />
    				<Text text="{Tunch}" />
    				<Label text="Wastage" />
    				<Text text="{Wastage}" />
            <Label text="Making" />
    				<Text text="{Making}" />
    			</f:content>
    		</f:SimpleForm>
    	</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
