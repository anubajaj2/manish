{
  "name": "Product",
  "plural": "Products",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "ProductId": {
      "type": "string",
      "required": true
    },
    "Name": {
      "type": "string",
      "required": true
    },
    "Category": {
      "type": "string",
      "required": true
    },
    "SubCategory  ": {
      "type": "string",
      "required": false
    },
    "Type": {
      "type": "string",
      "default": "S"
    },
    "PairType":{
      "type": "number",
      "default": 2
    },
    "ShortDescription": {
      "type": "string",
      "required": false
    },
    "ItemType": {
      "type": "string",
      "default": "G"
    },
    "Karat":{
      "type": "number",
      "default": 2
    },
    "Gender": {
      "type": "string",
      "default":"F"
    },
    "OverallStatus": {
      "type": "string",
      "required": false,
      "default": "N"
    },
    "HindiName": {
      "type": "string"
    },
    "Tunch": {
      "type": "number",
      "default":0,
      "required": true
    },
    "Wastage": {
      "type": "number",
      "default":0,
      "required": true
    },
    "Making": {
      "type": "number",
      "default":0,
      "required": false
    },
    "ApprovedOn": {
			"type": "date"
		},
    "AlertQuantity": {
      "type": "number",
      "default":0,
      "required": true
    },
    "CreatedOn": {
			"type": "date",
			"default": "null"
		},
		"CreatedBy": {
			"type": "string",
			"default": "null"
		},
		"ChangedOn": {
			"type": "date",
			"default": "null"
		},
		"ChangedBy": {
			"type": "string",
			"default": "null"
		}

  },
  "relations": {
    "ToPhotos":{
      "type":"hasMany",
      "model":"ProdPhoto",
      "foreignKey":"ProductId"
    },
    "ToWeights": {
      "type":"hasMany",
      "model":"ProdWeight",
      "foreignKey":"ProductId"
    },
    "ToCreatedBy": {
			"type": "belongsTo",
			"model": "User",
			"foreignKey": "CreatedBy"
		},
    "ToChangedBy": {
			"type": "belongsTo",
			"model": "User",
			"foreignKey": "ChangedBy"
		}
  },
  "validations": [],
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
